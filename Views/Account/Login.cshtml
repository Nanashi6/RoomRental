<div class="parent">
    <div class="loginContainer">
        <h1 class="loginHeader">Вход</h1>
        <form class="loginForm" method="post" asp-controller="Account" asp-action="Login"
              asp-route-returnUrl="@Model.ReturnUrl">
            <div class="block">
                @* <label class="loginLabel" asp-for="Login"></label> *@
                <input class="loginInput" asp-for=" Login" placeholder="Введите имя пользователя" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="block">
                @* <label class="loginLabel" asp-for="Password"></label> *@
                <input class="loginInput" asp-for="Password" placeholder="Введите пароль" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="block">
                <input class ="submitButton" type="submit" value="Войти" />
            </div>
            <div class="block">
                <label>Ещё нет аккаунта?</label>
                <a asp-area="" asp-controller="Account" asp-action="Register">Зарегистрировать</a>
            </div>
        </form>
    </div>
</div>