@model RoomRental.Models.Invoice

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1>Оплата аренды</h1>

    <div class="create-form-container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
