            <span asp-validation-for="PaymentDate" class="text-danger"></span>
@*             <label asp-for="ResponsiblePersonId" class="control-label"></label> *@
            <select class="filter-input" asp-for="ResponsiblePersonId" class="form-control" asp-items="ViewBag.ResponsiblePerson"></select>
            <div class="buttons">
                <a class="btn-primary submitButton-index" asp-action="Index">Возврат к списку</a>
                <input class="submitButton-index" type="submit" value="Создать" />
            </div>
        </form>
    </div>
</div>

