@model RoomRental.Models.ResponsiblePerson

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1>Создание оформляющего</h1>
    <div class="create-form-container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input class="filter-input" asp-for="Surname" class="form-control" placeholder="Фамилия" />
            <span asp-validation-for="Surname" class="text-danger"></span>
            <input class="filter-input" asp-for="Name" class="form-control" placeholder="Имя" />
            <span asp-validation-for="Name" class="text-danger"></span>
            <input class="filter-input" asp-for="Lastname" class="form-control" placeholder="Отчество" />
            <span asp-validation-for="Lastname" class="text-danger"></span>
            <div class="buttons">
                <a class="submitButton-index btn-primary" asp-action="Index">Возврат к списку</a>
                <input class="submitButton-index" type="submit" value="Создать" />
            </div>
        </form>
    </div>
</div>

